{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["babel"],
  "extends": ["airbnb/base"],
  "env": {
    "browser": true,
    "jquery": true,
    "es6": true
  },
  "globals": {
    "Promise": true
  },
  "rules": {
    "indent": [2, 4],
    "comma-dangle": 0
  }
}